; ------------------------------------------------------------------------------
; macros for forth 
; ------------------------------------------------------------------------------
macro m_setTOS val
{
       mov ebx, val
}

macro m_push val
{
       add ebp, 4
       mov [ebp], ebx
       m_setTOS val
}

; ------------------------------------------------------------------------------
macro m_getTOS val
{
       mov val, ebx
}

macro m_pop val
{
       m_getTOS val
       sub ebp, 4
       mov ebx, [ebp]
}

